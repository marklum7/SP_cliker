    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="schot" alignment="TOP_CENTER" style="-fx-font-size: 32;" text="тут будет счет">
      <font>
         <Font name="Arial Bold" size="32.0" />
      </font></Label>
    <Button fx:id="knopka" onAction="#onHelloButtonClick" style="-fx-min-height: 130; -fx-min-width: 130; -fx-max-height: 130; -fx-max-width: 130; -fx-border-radius: 20; -fx-background-radius: 130; -fx-background-color: efd334;" text="клик">
      <font>
         <Font name="Arial Bold" size="24.0" />
      </font>
   </Button>
   <Button fx:id="knopka1" onAction="#onHelloButtonClick1" style="-fx-background-radius: 130; -fx-max-height: 130; -fx-max-width: 130; -fx-min-height: 130; -fx-min-height: 130; -fx-background-color: efd334;" text="купить улучшение">
      <font>
         <Font name="Arial Bold" size="24.0" />
      </font>
   </Button>
</VBox>
